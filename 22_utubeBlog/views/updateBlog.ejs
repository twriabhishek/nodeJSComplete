<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('./partials/head.ejs') %>

    <title>Add Blogs</title>
  </head>
  <body>
    <!-- NavBar -->
    <%- include('./partials/navbar.ejs') %>
    <!-- NavBar -->

    <!-- <% {locals.user} %> -->

    <!-- Update Blogs -->
    <div class="vh-100 d-flex justify-content-center">
      <div class="col-12 col-lg-8">
        <form
          class="border border-2 bg-light"
          action="/api/v1/blog/updateBlog/<%= locals.singleBlog._id %>"
          method="post"
          enctype="multipart/form-data"
        >
          <h1 class="text-center mt-2">Update Blog</h1>
          <div class="ps-5 pe-5 pb-3 pt-3">
            <div class="mb-2">
              <label for="title" class="form-label">Title</label>
              <input
                type="text"
                class="form-control"
                id="title"
                aria-describedby="title"
                name="title"
                value="<%= locals.singleBlog.title %>"
                required
              />
              <div id="emailHelp" class="form-text">
                Enter Your Blog Title here
              </div>
            </div>
            <div class="mb-2">
              <label for="body" class="form-label">Description</label>
              <textarea
                type="text"
                class="form-control"
                id="body"
                name="body"
                rows="8"
                style="resize: none"
              >
               <%= locals.singleBlog.body %></textarea
              >
            </div>
            <div class="mb-3">
              <label for="coverImageUrl" class="form-label" name="coverImageUrl"
                >Enter Cover Image</label
              >
              <input
                class="form-control"
                type="file"
                id="coverImageUrl"
                name="coverImageUrl"
              />
              <% const imageUrl = locals.singleBlog.coverImageUrl; %>
              <span
                >Current File: <%= imageUrl.substring(imageUrl.lastIndexOf('/')
                + 1) %></span
              >
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-primary">Update</button>
            </div>
          </div>
        </form>
      </div>
    </div>
    <!-- Update Blogs -->

    <!-- Footer -->
    <%- include('./partials/foot.ejs') %>
    <!-- Footer -->

    <%- include('./partials/script.ejs') %>
  </body>
</html>
